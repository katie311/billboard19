<%= form_with(model: @artist, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Artist Name" %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.text_field :avatar, required: true, placeholder: "type anything!" %>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre, placeholder: "Genre" %>
  </div>
    <%= f.submit nil, class:"ui button"%>
<% end %>