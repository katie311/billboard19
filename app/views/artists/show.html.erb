<div class="ui card">
  <div class="image">
    <img src="https://robohash.org/<%= @artist.avatar %>?set=set2" />
  </div>
  <div class="content">
    <p class="header">
      <%= @artist.name %>
    </p>
    <div class="description">
      <%= @artist.genre %>
    </div>
  </div>
  <div class="extra content">
    <%= link_to 'Edit', edit_artist_path(@artist) %> |
    <%= link_to 'Back', artists_path %>
    <%= link_to 'Add a New Song', new_artist_song_path(@artist) %>
  </div>

</div>

<%= render "/songs/songs", songs: @artist.songs %>
